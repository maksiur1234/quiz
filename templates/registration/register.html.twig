<!DOCTYPE html>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-sm">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger bg-red-100 text-red-700 border-l-4 border-red-500 p-4 mb-4" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-2xl font-semibold text-center mb-6">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

                <div class="mb-4">
                    {{ form_row(registrationForm.email, {
                        'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none'}
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none'}
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(registrationForm.agreeTerms, {
                        'attr': {'class': 'ml-2'}
                    }) }}
                    <label for="agreeTerms" class="text-sm">I agree to the terms and conditions</label>
                </div>

                <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
                    Register
                </button>

            {{ form_end(registrationForm) }}
            <p class="text-gray-500">Already registered? <a href="/login" class="text-blue-500">Sign in!</a></p>
        </div>
    </div>
{% endblock %}
